<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.agriapp.Crops" >

    <TextView
        android:id="@+id/txt_water2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Water Availability" />

    <TextView
        android:id="@+id/txt_soil3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_centerVertical="true"
        android:text="Soil Type" />

    <TextView
        android:id="@+id/txt_soil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_soil3"
        android:layout_alignBottom="@+id/txt_soil3"
        android:layout_alignLeft="@+id/txt_water"
        android:text="Dry" />

    <TextView
        android:id="@+id/txt_ph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_soil"
        android:layout_below="@+id/txt_soil"
        android:layout_marginTop="27dp"
        android:text="6.7" />

    <TextView
        android:id="@+id/txt_temp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_soil3"
        android:layout_alignLeft="@+id/txt_soil3"
        android:layout_marginBottom="34dp"
        android:text="Average Temperature" />

    <TextView
        android:id="@+id/txt_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_temp2"
        android:layout_alignBottom="@+id/txt_temp2"
        android:layout_alignLeft="@+id/txt_soil"
        android:text="27 degree" />

    <TextView
        android:id="@+id/txt_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_water2"
        android:layout_alignBottom="@+id/txt_water2"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@+id/txt_temp2"
        android:text="25mm" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_ph"
        android:layout_alignBottom="@+id/txt_ph"
        android:layout_alignLeft="@+id/txt_soil3"
        android:text="PH" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_water"
        android:layout_alignLeft="@+id/txt_water2"
        android:layout_marginBottom="14dp"
        android:text="Tomato" />

</RelativeLayout>
